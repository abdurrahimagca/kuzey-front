<section class="about section-margin">
  <div class="container mb-70 p-relative">
    <h5 class="sub-heading mb-15 pb-15"><%= about.about.title %></h5>
    <h2 class="section-title text-uppercase"><%= about.about.subtitle %></h2>
  </div>
  <div class="container">
    <div class="d-grid grid-md-2">
      <div class="">
        <div class="box">
          <h2 class="h2 mb-20"><%= about.about.mainContent.title %></h2>
          <p><%= about.about.mainContent.description %></p>
        </div>

        <div class="d-grid grid-sm-2 mt-30">
          <% about.about.mainContent.stats.forEach(function(stat) { %>
          <div class="item">
            <h2 class="title"><%= stat.number %></h2>
            <p class="sm-title-block"><%= stat.text %></p>
          </div>
          <% }); %>
        </div>
        <div class="box-img mt-30">
          <img src="assets/img/uploads/arch-img-1.jpg" alt="" />
        </div>
      </div>

      <div class="">
        <div class="box">
          <div class="box-item">
            <h5
              class="sm-title-block text-uppercase p-relative line-shap line-shap-after d-inline-block mb-15"
            >
              <span class="p-10 background-section dsn-load-animate">
                <%= about.about.mission.title %>
              </span>
            </h5>
            <p><%= about.about.mission.description %></p>
          </div>
        </div>

        <div class="box-img-content mt-30">
          <div class="box-img">
            <img src="assets/img/uploads/arch-img-2.jpg" alt="" />
          </div>

          <div class="contetn mt-30">
            <h4 class="title-block mb-20">
              <%= about.about.successful.title %>
            </h4>
            <p><%= about.about.successful.description %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
