<section class="about section-margin">
  <div class="container mb-70 p-relative">
    <h5 class="sub-heading mb-15 pb-15"><%= about.about.title %></h5>
  </div>
  <div class="container">
    <div class="d-grid grid-md-2">
      <div class="">
        <div class="box">
          <h2 class="h2 mb-20"><%= about.about.mainContent.title %></h2>
          <div class="description-content">
            <% const paragraphs =
            about.about.mainContent.description.split('.'); let currentParagraph
            = ''; for(let i = 0; i < paragraphs.length; i++) {
            if(paragraphs[i].trim()) { currentParagraph += paragraphs[i] + '.';
            if((i + 1) % 3 === 0 || i === paragraphs.length - 1) { %>
            <p><%= currentParagraph %></p>
            <% currentParagraph = ''; } } } %>
          </div>
        </div>

        <div class="d-grid grid-sm-2 mt-30">
          <% about.about.mainContent.stats.forEach(function(stat) { %>
          <div class="item">
            <h2 class="title"><%= stat.number %></h2>
            <p class="sm-title-block"><%= stat.text %></p>
          </div>
          <% }); %>
        </div>
      </div>

      <div class="">
        <div class="box">
          <div class="box-item">
            <h5
              class="sm-title-block text-uppercase p-relative line-shap line-shap-after d-inline-block mb-15"
            >
              <span class="p-10 background-section dsn-load-animate">
                <%= about.about.mission.title %>
              </span>
            </h5>
            <ul class="mission-list">
              <% about.about.mission.description.forEach(function(item) { %>
              <li><%= item %></li>
              <% }); %>
            </ul>
          </div>
        </div>

        <div class="box-img-content mt-30">
          <div class="box-img">
            <img src="assets/img/uploads/m-v-img.jpg" alt="" />
          </div>

          <div class="contetn mt-30">
            <h4 class="title-block mb-20">
              <%= about.about.successful.title %>
            </h4>
            <ul class="vision-list">
              <% about.about.successful.description.forEach(function(item) { %>
              <li><%= item %></li>
              <% }); %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
