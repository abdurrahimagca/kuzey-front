<a href="<%= item.link %>" class="work-item induction p-10 border effect-ajax">
    <div class="img-next-box before-z-index w-100 h-v-60 over-hidden">
        <img class="cover-bg-img box-shadow" src="<%= item.image %>" alt="<%= item.title %>">
    </div>
    <div class="item-info p-relative w-100 d-flex align-items-end p-25 z-index-1 v-dark-head">
        <div class="d-flex align-items-center">
            <div class="text">
                <div class="metas mb-10">
                    <% item.categories.forEach(function(category) { %>
                        <span><%= category %></span>
                    <% }); %>
                </div>
                <h4 class="sm-title-block sec-title text-uppercase"><%= item.title %></h4>
            </div>
        </div>
    </div>
</a> 